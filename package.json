{
  "name": "express-typescript-APIREST-starter",
  "version": "0.0.4",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Pawel Sasin",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run clean && npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets && npm run doc",
    "doc:v1": "typedoc --out dist/public/docs/api/v1 --ignoreCompilerErrors src/v1",
    "doc:v2": "typedoc --out dist/public/docs/api/v2 --ignoreCompilerErrors src/v2",
    "doc:common": "typedoc --out dist/public/docs/common --ignoreCompilerErrors src/common",
    "doc": "run-p doc:*",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:verb": "jest --verbose",
    "test:debug": "node --inspect-brk -r tsonfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "watch-test": "npm run test -- --watchAll",
    "clean": "rimraf dist",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "todo": "leasot 'src/**/*.ts'",
    "todo-ci": "leasot -x --reporter markdown 'src/**/*.ts' > TODO.md",
    "copy:githooks": "copyfiles -u 2 tools/githooks/* ./.git/hooks/",
    "postinstall": "npm run copy:githooks"
  },
  "dependencies": {
    "@types/express-validator": "^3.0.0",
    "@types/moment": "^2.13.0",
    "async": "^3.1.0",
    "bluebird": "^3.7.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.16.2",
    "express-urlrewrite": "^1.2.0",
    "express-validator": "^6.0.1",
    "fbgraph": "^1.4.4",
    "jsonwebtoken": "^8.5.1",
    "jwt-simple": "^0.5.6",
    "leasot": "^7.5.0",
    "lodash": "^4.17.15",
    "logger": "0.0.1",
    "lusca": "^1.6.1",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "nanoid": "^2.0.3",
    "nodemailer": "^6.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sha3": "^2.0.4"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.0",
    "@types/express-flash": "0.0.0",
    "@types/express-session": "^1.15.13",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^24.0.15",
    "@types/jquery": "^3.3.29",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.134",
    "@types/lusca": "^1.6.0",
    "@types/method-override": "^0.0.31",
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.10",
    "@types/nodemailer": "^6.2.0",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "@types/validator": "^10.11.1",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jshint": "^2.10.2",
    "log": "^6.0.0",
    "marked": "^0.6.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
